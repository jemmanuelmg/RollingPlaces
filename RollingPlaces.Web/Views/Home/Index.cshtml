                    <h5>Sara P.</h5>
                    <p class="font-weight-light mb-0">"La mejor App de la vida"</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="call-to-action text-white text-center">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <h2 class="mb-4">Listo para empezar? Registrate!</h2>
            </div>
            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">                           
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg btn-block">Registro!!</a>             
