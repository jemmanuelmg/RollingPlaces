@model RollingPlaces.Web.Data.Entities.PlaceEntity

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Place</h4>
    <hr />
    <dl class="dl-horizontal">

        <div class="row">
            <div class="col-md-2"><b>@Html.DisplayNameFor(model => model.CreatedDate)</b></div>
            <div class="col-md-10"> @Html.DisplayFor(model => model.CreatedDate)</div>
        </div>

        <div class="row">
            <div class="col-md-2"><b>@Html.DisplayNameFor(model => model.Description)</b></div>
            <div class="col-md-10"> @Html.DisplayFor(model => model.Description)</div>
        </div>

        <div class="row">
            <div class="col-md-2"><b> @Html.DisplayNameFor(model => model.Name)</b></div>
            <div class="col-md-10"> @Html.DisplayFor(model => model.Name)</div>
        </div>

        <div class="row">
            <div class="col-md-2"><b>   @Html.DisplayNameFor(model => model.Category)</b></div>
            <div class="col-md-10">  @Html.DisplayFor(model => model.Category.Name)</div>
        </div>

        <div class="row">
            <div class="col-md-2"><b>     @Html.DisplayNameFor(model => model.City)</b></div>
            <div class="col-md-10">  @Html.DisplayFor(model => model.City.Name)</div>
        </div>

        <div class="row">
            <div class="col-md-2"><b>    @Html.DisplayNameFor(model => model.User)  </b></div>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.User.FirstName)
                @Html.DisplayFor(model => model.User.LastName)
            </div>
        </div>
        <div class="row">
            <div class="col-md-2"><b>@Html.DisplayNameFor(model => model.City)</b></div>
            <div class="col-md-10">  @Html.DisplayFor(model => model.City.Name)</div>
        </div>
        <div class="row">
            <div class="col-md-2"><b>@Html.DisplayNameFor(model => model.User.PhoneNumber)</b></div>
            <div class="col-md-10">  @Html.DisplayFor(model => model.User.PhoneNumber)</div>
        </div>
        <div class="row">
            <div class="col-md-2"><b>@Html.DisplayNameFor(model => model.User.Email)</b></div>
            <div class="col-md-10">  @Html.DisplayFor(model => model.User.Email)</div>
        </div>
</div>

<br />
<br />
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        @foreach (var item in Model.Photos)
        {
            <div class="item">
                <img src="@Url.Content(item.PhotoPath)" alt="Imagenes del lugar" class="img-responsive" height="400" />
                <div class="carousel-caption" role="option">
                    <p>
                        There are powerful new features in Visual Studio for building modern web apps.
                        <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
        }
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div>



