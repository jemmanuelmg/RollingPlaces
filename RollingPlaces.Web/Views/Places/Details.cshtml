@model RollingPlaces.Web.Data.Entities.PlaceEntity

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>

    <h4>Place</h4>
    <hr />
    <dl class="dl-horizontal">

        <div class="row">
            <div class="col-md-2"><b>@Html.DisplayNameFor(model => model.CreatedDate)</b></div>
            <div class="col-md-10"> @Html.DisplayFor(model => model.CreatedDate)</div>
        </div>

        <div class="row">
            <div class="col-md-2"><b>@Html.DisplayNameFor(model => model.Description)</b></div>
            <div class="col-md-10"> @Html.DisplayFor(model => model.Description)</div>
        </div>

        <div class="row">
            <div class="col-md-2"><b> @Html.DisplayNameFor(model => model.Name)</b></div>
            <div class="col-md-10"> @Html.DisplayFor(model => model.Name)</div>
        </div>

        <div class="row">
            <div class="col-md-2"><b>   @Html.DisplayNameFor(model => model.Category)</b></div>
            <div class="col-md-10">  @Html.DisplayFor(model => model.Category.Name)</div>
        </div>

        <div class="row">
            <div class="col-md-2"><b>     @Html.DisplayNameFor(model => model.City)</b></div>
            <div class="col-md-10">  @Html.DisplayFor(model => model.City.Name)</div>
        </div>

        <div class="row">
            <div class="col-md-2"><b>    @Html.DisplayNameFor(model => model.User)  </b></div>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.User.FirstName)
                @Html.DisplayFor(model => model.User.LastName)
            </div>
        </div>
        <div class="row">
            <div class="col-md-2"><b>@Html.DisplayNameFor(model => model.City)</b></div>
            <div class="col-md-10">  @Html.DisplayFor(model => model.City.Name)</div>
        </div>
        <div class="row">
            <div class="col-md-2"><b>@Html.DisplayNameFor(model => model.User.PhoneNumber)</b></div>
            <div class="col-md-10">  @Html.DisplayFor(model => model.User.PhoneNumber)</div>
        </div>
        <div class="row">
            <div class="col-md-2"><b>@Html.DisplayNameFor(model => model.User.Email)</b></div>
            <div class="col-md-10">  @Html.DisplayFor(model => model.User.Email)</div>
        </div>
</div>


<br />
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
    </ol>
    <div class="carousel-inner" role="listbox">

        @foreach (var item in Model.Photos)
        {

            <div class="item active">
                <img src="@Url.Content(item.PhotoPath)" alt="Imagen del lugar" class="img-responsive" />
                <div class="carousel-caption" role="option">

                </div>
            </div>
        }

        <a class="left carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

    <br />
    <h3 class="panel-title">Calificacion y comentarios del lugar:</h3>
    <br />
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Calificacion</th>
                <th scope="col">Comentarios del lugar </th>
                <th scope="col">Usuario</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Qualifications)
            {
                <tr>
                    <th scope="row">·</th>
                    <td>@Html.DisplayFor(modelItem => item.Value)</td>
                    <td>@Html.DisplayFor(modelItem => item.Comment)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.FirstName)
                        @Html.DisplayFor(modelItem => item.User.LastName)
                    </td>

                </tr>


            }

        </tbody>
    </table>
 

